@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn @(isPositive ? "positive-btn" : isNegative ? "negative-btn" : "neutral-btn")" @onclick="IncrementCount">Öka med 1</button>
<button class="btn @(isPositive ? "positive-btn" : isNegative ? "negative-btn" : "neutral-btn")" @onclick="DecreeseCount">Minska med 1</button>
<button class="btn @(isPositive ? "positive-btn" : isNegative ? "negative-btn" : "neutral-btn")" @onclick="SetCount0">Resetting count</button>

<style>
    .positive-btn {
        background-color: green;
        color: white;
    }

    .negative-btn {
        background-color: red;
        color: white;
    }

    .neutral-btn {
        background-color: gray;
        color: white;
    }
</style>

@code {

    private int currentCount = 0;

    private bool isPositive => currentCount > 0;
    private bool isNegative => currentCount < 0;

    private void IncrementCount()
    {
        currentCount++;
    }


    private void DecreeseCount()
    {
        currentCount--;
    }

    private void SetCount0()
    {
        currentCount = 0;
    }
}