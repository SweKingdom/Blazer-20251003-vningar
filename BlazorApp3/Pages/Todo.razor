@page "/Todo"

<PageTitle>Todo</PageTitle>

<input @bind-value="newTodo" @bind-value:event="oninput" placeholder="Skriv en todo..." />
<button class="btn btn-primary" @onclick="AddTodo">Add</button>

<ul>
	@foreach (var todo in todos)
	{
		<li>
			@todo
			<button class="btn btn-sm btn-danger" @onclick="() => RemoveTodo(todo)">Remove</button>
		</li>
	}
</ul>



@code {
	private string? newTodo;
	private List<string> todos = new();

	private void AddTodo()
	{
		if (!string.IsNullOrWhiteSpace(newTodo))
		{
			todos.Add(newTodo);
			newTodo = string.Empty;
		}
	}

	private void RemoveTodo(string todo)
	{
		todos.Remove(todo);
	}

}
